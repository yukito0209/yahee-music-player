/* --- 添加窗口控制按钮样式 --- */
.window-controls {
    position: absolute;
    top: 0;
    right: 0;
    display: flex;
    z-index: 1000;
    -webkit-app-region: no-drag; /* 按钮区域不可拖动 */
    padding-right: 10px;
    height: 30px; /* 添加固定高度 */
}
.window-control-button {
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    cursor: pointer;
    transition: background-color 0.2s;
    -webkit-app-region: no-drag; /* 确保按钮本身不可拖动 */
    user-select: none; /* 防止文本被选中 */
}
.window-control-button:hover {
    background-color: rgba(255, 255, 255, 0.1);
}
.window-control-button.close:hover {
    background-color: #e81123;
}
/* 确保按钮和输入框不可拖动 */
button, input, a, .control-button, .volume-slider, .progress-bar, 
#playlist li, #toggle-playlist-btn, .window-control-button {
    -webkit-app-region: no-drag;
}
.window-control-button svg {
    -webkit-app-region: no-drag; /* 确保 SVG 本身也不可拖动 */
    pointer-events: none; /* 避免 SVG 捕获鼠标事件 */
}
/* --- 新增：定义淡入动画关键帧 --- */
@keyframes fadeIn {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

/* 新增：拖放效果样式 */
body.drag-over {
    position: relative;
}

body.drag-over::before {
    content: '拖放音频文件到这里';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
    font-weight: bold;
    z-index: 10000;
    pointer-events: none;
}

/* 拖拽状态下的播放列表项样式 */
#playlist li.dragging {
    opacity: 0.5;
    transform: rotate(5deg);
    transition: transform 0.2s ease, opacity 0.2s ease;
}

/* 错误和成功消息样式（为将来的通知系统准备） */
.notification {
    position: fixed;
    top: 20px;
    right: 20px;
    padding: 12px 20px;
    border-radius: 8px;
    color: white;
    font-weight: bold;
    z-index: 10000;
    transform: translateX(100%);
    transition: transform 0.3s ease;
}

.notification.show {
    transform: translateX(0);
}

.notification.error {
    background: rgba(255, 0, 0, 0.9);
}

.notification.success {
    background: rgba(0, 255, 0, 0.9);
}

.notification.info {
    background: rgba(0, 123, 255, 0.9);
}

/* --- 特别确保交互元素可点击 --- */
button, input, a, .control-button, .window-control-button, 
#playlist li, #toggle-playlist-btn, .progress-bar, .volume-slider {
    pointer-events: auto !important;
    -webkit-app-region: no-drag !important;
    cursor: pointer !important;
} 